body {
  background-color: #000;
  margin: 0;
  padding: 0;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-family: 'Arial Black', 'Arial', sans-serif;
}

.container {
  text-align: center;
}

#current-time {
  display: none; /* Hide if you only want the countdown */
}

#countdown {
  font-size: 18vw;
  font-weight: 900;
  color: white;
  letter-spacing: 1vw;
}
